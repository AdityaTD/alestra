{
	"compilerOptions": {
		"module": "commonjs",
        "target": "esnext",
        "lib": ["esnext"],
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	]
}
